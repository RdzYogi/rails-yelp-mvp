<%= render partial: 'restaurants/nav' %>

<div class="d-flex flex-column m-auto w-50">
  <h1 class="border-bottom pb-4">
    <%= @restaurant.name %>
    <%= link_to "", edit_restaurant_path(@restaurant), class: "fa-solid fa-pencil text-decoration-none fs-5" %>
    <%= link_to "", restaurant_path(@restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"fa-solid fa-trash-can text-decoration-none fs-5" %>
  </h1>
  <p class="mt-3">
    <%= @restaurant.address%>
    <%= @restaurant.category%>
    <%= @restaurant.phone_number%>
  </p>
  <div class="d-flex flex-column">
    <h2 class="border-bottom pb-4">
      Reviews
    </h2>
    <div>
      <%= render partial: 'reviews/form' %>
    </div>
    <div class="d-flex flex-column">
      <% @restaurant.reviews.each do |r| %>
          <div class="d-flex justify-content-between ">
            <p><%= r.content %></p>
            <p><%= r.rating %>/5‚≠ê</p>
          </div>
        <% end %>
    </div>
  </div>
